<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <!-- Image for Package Type -->
        <ImageView
            android:id="@+id/packageImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:src="@drawable/solopackageimg"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Package Name -->
            <TextView
                android:id="@+id/packageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package: Solo"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <!-- Booking Date -->
            <TextView
                android:id="@+id/bookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 00-00-0000"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Booking Amount -->
            <TextView
                android:id="@+id/bookingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: â‚±500"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Rebook Button -->
            <Button
                android:id="@+id/rebookButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rebook"
                android:backgroundTint="#4D362A"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
